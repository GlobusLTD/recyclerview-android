<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <Button
        android:id="@+id/datasource_examples"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/datasource_examples"/>

    <Button
        android:id="@+id/choice_mode_examples"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choice_mode_examples"/>

    <Button
        android:id="@+id/lifecycle_example"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lifecycle_example"/>

</LinearLayout>