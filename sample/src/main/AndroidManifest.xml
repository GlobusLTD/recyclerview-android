<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="com.globusltd.recyclerview.sample"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.READ_CALL_LOG"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".SampleActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".datasource.DatasourceExamplesActivity"
            android:label="@string/datasource_examples"/>

        <activity
            android:name=".datasource.ListDatasourceExampleActivity"
            android:label="@string/list_datasource_example"/>

        <activity
            android:name=".datasource.CursorDatasourceExampleActivity"
            android:label="@string/cursor_datasource_example"/>

        <activity
            android:name=".choicemode.ChoiceModeExamplesActivity"
            android:label="@string/choice_mode_examples"/>

        <activity
            android:name=".choicemode.SingleChoiceModeExampleActivity"
            android:label="@string/single_choice_mode_example"/>

        <activity
            android:name=".choicemode.SingleModalChoiceModeExampleActivity"
            android:label="@string/single_modal_choice_mode_example"/>

        <activity
            android:name=".choicemode.MultipleChoiceModeExampleActivity"
            android:label="@string/multiple_choice_mode_example"/>

    </application>

</manifest>